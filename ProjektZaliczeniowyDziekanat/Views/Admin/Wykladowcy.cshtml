@model List<ProjektZaliczeniowyDziekanat.DAL.Models.WykladowcaDTO>;
@{
    ViewData["Title"] = "Wykładowcy - Wirtualny Dziekanat";
    ViewData["ctrl"] = "Admin";
    Layout = "AdminLayout";
}


<div class="text-center mt-5 p-5 rounded shadow-lg bg-light">
    <h1>Wykładowcy</h1>

    <form asp-action="Wykladowcy" method="get">
        <div class="form-actions">
            <p>
                <label for="SearchString" class="m-2"> Szukaj po nazwisku: </label>
                <input type="text" name="SearchString" class="m-2" value="@ViewData["CurrentFilter"]" />
                <input type="submit" value="Szukaj" class="btn btn-outline-dark btn-lg px-4 m-2" /> <hr />
            </p>
        </div>
    </form>

    <table class="table">
        <thead>
            <tr>
                <th> ID </th>
                <th> Imię </th>
                <th> Nazwisko </th>
                <th> Prowadzony przedmiot </th>
                <th> Stopień naukowy </th>
                <th> PESEL </th>
                <th> Adres zamieszkania </th>
                <th> Miejsce zamieszkania </th>
                <th> Narodowość </th>
                <th> Obywatelstwo </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td> @item.WykladowcaID </td>
                <td> @item.Imie </td>
                <td> @item.Nazwisko </td>
                <td> @item.ProwadzonyPrzedmiot </td>
                <td> @item.StopienNaukowy </td>
                <td> @item.PESEL </td>
                <td> @item.AdresZamieszkania </td>
                <td> @item.MiejsceZamieszkania </td>
                <td> @item.Narodowosc </td>
                <td> @item.Obywatelstwo </td>
            </tr>
            }
        </tbody>
    </table>
</div>


